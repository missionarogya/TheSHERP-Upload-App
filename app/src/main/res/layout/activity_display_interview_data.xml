<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="android.sherp.missionarogya.sherp_upload.DisplayInterviewData">

    <Button
        android:textColor="#00F"
        android:textSize="13pt"
        android:id="@+id/exit"
        android:clickable="true"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EXIT"
        style="?android:attr/borderlessButtonStyle"/>

    <ScrollView
        android:id="@+id/layout"
        android:layout_height="match_parent"
        android:scrollbars="horizontal|vertical"
        android:layout_width="match_parent"
        android:layout_marginTop="5dip"
        android:scrollbarStyle="outsideInset"
        android:fillViewport="true">

        <HorizontalScrollView
            android:id="@+id/horizontalView"
            android:layout_height="wrap_content"
            android:scrollbars="horizontal|vertical"
            android:layout_width="wrap_content"
            android:layout_marginTop="5dip">

            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="100dp"
                android:background="@android:color/white"
                android:id="@+id/interviewDataTable">

                <TableRow
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:text=" QASetID "
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:background="@android:color/black"
                        android:textStyle="bold"
                        android:id="@+id/textView0"
                        android:layout_column="0"
                        android:layout_marginRight="3dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:text=" Interviewer "
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:background="@android:color/black"
                        android:textStyle="bold"
                        android:id="@+id/textView1"
                        android:layout_column="1"
                        android:layout_marginRight="3dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:text=" Interviewee "
                        android:textColor="@android:color/white"
                        android:background="@android:color/black"
                        android:layout_marginRight="3dp"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:id="@+id/textView2"
                        android:layout_column="2"
                        android:gravity="center"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:text=" Interview Start Time "
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:background="@android:color/black"
                        android:layout_marginRight="3dp"
                        android:textStyle="bold"
                        android:id="@+id/textView3"
                        android:layout_column="3" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:clickable="true"
                        android:text=" Interview End Time "
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:background="@android:color/black"
                        android:layout_marginRight="3dp"
                        android:textStyle="bold"
                        android:id="@+id/textView4"
                        android:layout_column="4" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:text=" Venue of Interview "
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:background="@android:color/black"
                        android:layout_marginRight="3dp"
                        android:textStyle="bold"
                        android:id="@+id/textView5"
                        android:layout_column="5" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:text=" District of Interviewee "
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:background="@android:color/black"
                        android:layout_marginRight="3dp"
                        android:textStyle="bold"
                        android:id="@+id/textView6"
                        android:layout_column="6" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:text=" Block of Interviewee "
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:background="@android:color/black"
                        android:layout_marginRight="3dp"
                        android:textStyle="bold"
                        android:id="@+id/textView7"
                        android:layout_column="7" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:text=" Village of Interviewee "
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:background="@android:color/black"
                        android:layout_marginRight="3dp"
                        android:textStyle="bold"
                        android:id="@+id/textView8"
                        android:layout_column="8" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:text=" AWC Code of Interviewee "
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:background="@android:color/black"
                        android:layout_marginRight="3dp"
                        android:textStyle="bold"
                        android:id="@+id/textView9"
                        android:layout_column="9" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_weight="1"
                        android:text=" Audio File of the Interview "
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:background="@android:color/black"
                        android:layout_marginRight="0dp"
                        android:textStyle="bold"
                        android:id="@+id/textView10"
                        android:layout_column="10" />

                </TableRow>
                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@android:color/white"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp">

                    <TextView
                        android:layout_weight="1"
                        android:clickable="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:background="@android:color/black"
                        android:layout_marginRight="3dp"
                        android:textStyle="bold"
                        android:id="@+id/textViewHospital0"
                        android:layout_column="0" />

                    <TextView
                        android:layout_weight="1"
                        android:clickable="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:background="@android:color/black"
                        android:layout_marginRight="3dp"
                        android:textStyle="bold"
                        android:id="@+id/textViewHospital"
                        android:layout_column="1" />

                    <TextView
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:background="@android:color/black"
                        android:layout_marginRight="3dp"
                        android:textStyle="normal"
                        android:clickable="true"
                        android:id="@+id/textViewPhoneNumber"
                        android:layout_column="2" />

                    <TextView
                        android:layout_weight="1"
                        android:clickable="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:background="@android:color/black"
                        android:layout_marginRight="3dp"
                        android:textStyle="bold"
                        android:id="@+id/textViewHospital1"
                        android:layout_column="3" />

                    <TextView
                        android:layout_weight="1"
                        android:clickable="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:background="@android:color/black"
                        android:layout_marginRight="3dp"
                        android:textStyle="bold"
                        android:id="@+id/textViewHospital2"
                        android:layout_column="4" />

                    <TextView
                        android:layout_weight="1"
                        android:clickable="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:background="@android:color/black"
                        android:layout_marginRight="3dp"
                        android:textStyle="bold"
                        android:id="@+id/textViewHospital3"
                        android:layout_column="5" />

                    <TextView
                        android:layout_weight="1"
                        android:clickable="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:background="@android:color/black"
                        android:layout_marginRight="3dp"
                        android:textStyle="bold"
                        android:id="@+id/textViewHospital4"
                        android:layout_column="6" />

                    <TextView
                        android:layout_weight="1"
                        android:clickable="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:background="@android:color/black"
                        android:layout_marginRight="3dp"
                        android:textStyle="bold"
                        android:id="@+id/textViewHospital5"
                        android:layout_column="7" />

                    <TextView
                        android:layout_weight="1"
                        android:clickable="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@android:color/white"
                        android:background="@android:color/black"
                        android:layout_marginRight="3dp"
                        android:textStyle="bold"
                        android:id="@+id/textViewHospital6"
                        android:layout_column="8" />

                    <TextView
                        android:layout_weight="1"
                        android:id="@+id/imageView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="9"
                        android:background="@android:color/black"
                        android:layout_marginRight="3dp"/>

                    <ImageView
                        android:layout_weight="1"
                        android:id="@+id/imageViewPlay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_column="10"
                        android:src="@drawable/play"
                        android:background="@android:color/black"
                        android:layout_marginRight="0dp"/>

                </TableRow>
            </TableLayout>
        </HorizontalScrollView>
    </ScrollView>

</RelativeLayout>
